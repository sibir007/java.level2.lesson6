<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="ru.geekbrains.java.level2.chat.server.Server" level="trace">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="ru.geekbrains.java.level2.chat.server.ClientHandler" level="trace">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="ru.geekbrains.java.level2.chat.server.JdbcRegistrationProvider" level="trace">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>