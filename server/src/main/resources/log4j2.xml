<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="basePath">logs</Property>
    </Properties>

    <Appenders>
        <File name="File1" fileName="${basePath}/logfile1.log" append="true">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="ru.geekbrains.java.level2.chat.server" level="trace">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="ru.geekbrains.java.level2.chat.server.Server" level="trace">
<!--            <AppenderRef ref="Console"/>-->
        </Logger>
        <Logger name="ru.geekbrains.java.level2.chat.server.ClientHandler" level="trace">
<!--            <AppenderRef ref="Console"/>-->
        </Logger>
        <Logger name="ru.geekbrains.java.level2.chat.server.JdbcRegistrationProvider" level="trace">
<!--            <AppenderRef ref="Console"/>-->
        </Logger>
        <Logger name="ru.geekbrains.java.level2.chat.server.LoggerExample" level="trace">
<!--            <AppenderRef ref="Console"/>-->
        </Logger>
        <Root level="error">
<!--            <AppenderRef ref="Console"/>-->
            <AppenderRef ref="File1" />
        </Root>
    </Loggers>
</Configuration>